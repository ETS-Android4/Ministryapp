<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tk.phili.dienst.dienst.BerichtAddFrame"
    android:background="#fff"
    android:backgroundTint="#fff"
    tools:showIn="@layout/activity_bericht_add_frame">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/ic_date_range_black_24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/editText2"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:layout_alignBottom="@+id/editText2"
                    android:layout_toLeftOf="@+id/editText2"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_width="20dp" />

                <EditText
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:ems="10"
                    android:id="@+id/add_bericht_date"
                    android:hint="@string/date"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:clickable="false"
                    android:editable="false" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/ic_timer_black_24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/editText2"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:layout_alignBottom="@+id/editText2"
                    android:layout_toLeftOf="@+id/editText2"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_width="20dp" />

                <EditText
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/add_bericht_hours"
                    android:maxLength="2"
                    android:hint="@string/title_activity_stunden"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_row="0"
                    android:layout_column="1" ><requestFocus/></EditText>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <EditText
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/add_bericht_minutes"
                    android:hint="@string/minutes"
                    android:maxLength="2"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_row="0"
                    android:layout_column="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/ic_content_copy_black_24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/editText2"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:layout_alignBottom="@+id/editText2"
                    android:layout_toLeftOf="@+id/editText2"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_width="20dp" />

                <EditText
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/add_bericht_abgaben"
                    android:hint="@string/title_activity_abgaben"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_row="0"
                    android:layout_column="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/ic_people_black_24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/editText2"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:layout_alignBottom="@+id/editText2"
                    android:layout_toLeftOf="@+id/editText2"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_width="20dp" />

                <EditText
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/add_bericht_returns"
                    android:hint="@string/title_activity_rÃ¼ckbesuche"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_row="0"
                    android:layout_column="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/ic_play_arrow_black_24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/editText2"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:layout_alignBottom="@+id/editText2"
                    android:layout_toLeftOf="@+id/editText2"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_width="20dp" />

                <EditText
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/add_bericht_videos"
                    android:hint="@string/title_activity_videos"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_row="0"
                    android:layout_column="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/ic_chrome_reader_mode_black_24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/editText2"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:layout_alignBottom="@+id/editText2"
                    android:layout_toLeftOf="@+id/editText2"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_width="20dp" />

                <EditText
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/add_bericht_studies"
                    android:hint="@string/title_activity_heimb"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_row="0"
                    android:layout_column="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/ic_comment_black_24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/editText2"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:layout_alignBottom="@+id/editText2"
                    android:layout_toLeftOf="@+id/editText2"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_width="20dp" />

                <EditText
                    android:id="@+id/add_bericht_annotation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:ems="10"
                    android:hint="@string/title_activity_annotation"
                    android:inputType="textMultiLine|text|textImeMultiLine" />

            </TableRow>
        </TableLayout>


</androidx.core.widget.NestedScrollView>
