<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:context=".Empfehlungen">

    <RelativeLayout
        android:id="@+id/container4"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">


        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:fitsSystemWindows="true"
            android:layout_below="@+id/toolbar_3">

        </WebView>

        <!--TextView
            android:id="@+id/no_net"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="@string/noconnect"
            android:textColor="#fff"
            android:textSize="40dp"
            android:visibility="visible" /-->

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:visibility="visible"
            app:theme="@style/DrawerTheme">

            <Spinner
                android:id="@+id/spinner_nav_empf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.Toolbar>

        <ProgressBar
            android:id="@+id/progressBar_empf"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/toolbar_3"
            android:layout_x="6dp"
            android:layout_y="1dp"
            android:progressTint="@color/green_accent" />

        <!--ImageView
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@+id/no_net"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_signal_wifi_off_black_24dp"
            android:tint="#fff"
            android:visibility="visible"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="154dp" />

        <Button
            android:id="@+id/retry_empf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/no_net"
            android:layout_centerHorizontal="true"
            android:text="@string/retry" /-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="100dp"
                app:srcCompat="@drawable/ic_signal_wifi_off_black_24dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:tint="#fff"
                android:id="@+id/imageView3"
                android:layout_height="100dp"
                android:visibility="visible" />

            <TextView
                android:text="@string/noconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_centerHorizontal="true"
                android:textColor="#fff"
                android:layout_below="@id/imageView3"
                android:gravity="center_horizontal"
                android:id="@+id/no_net"
                android:visibility="visible" />

        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer" />

</android.support.v4.widget.DrawerLayout>