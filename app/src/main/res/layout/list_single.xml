<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="75dp">

                <ImageView
                    android:id="@+id/listpreviewimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="#b4ffffff" />


            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/listsinglerellay"
                android:layout_width="wrap_content"
                android:layout_height="75dp">


                <TextView
                    android:id="@+id/mb"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/imageView5"
                    android:gravity="center"
                    android:text="0MB"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/mb"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/ic_cloud_download_black_24dp"
                    android:tint="@android:color/darker_gray" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/time"
                    app:srcCompat="@drawable/ic_done_black_24dp"
                    android:tint="@android:color/darker_gray"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignTop="@+id/imageView5"
                    android:layout_toEndOf="@+id/imageView5"
                    android:layout_toRightOf="@+id/imageView5"
                    android:gravity="center"
                    android:text="00:00"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="200px"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/mb"
                    android:layout_toStartOf="@+id/mb"
                    android:layout_weight=".70"
                    android:ellipsize="none"
                    android:fadingEdgeLength="40dp"
                    android:requiresFadingEdge="horizontal"
                    android:text="ERROR"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txt"
                    app:srcCompat="@drawable/ic_play_arrow_black_24dp"
                    android:tint="@android:color/darker_gray" />


            </RelativeLayout>

        </RelativeLayout>
    </TableRow>
</TableLayout>